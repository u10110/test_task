{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2015"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "node",
    "express"
  ]
}